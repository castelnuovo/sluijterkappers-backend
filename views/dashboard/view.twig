<div class="col s12 m6 l4 xl3">
    <div class="card hoverable">
        <div class="card-image waves-effect waves-block waves-light">
            <a href="{{product.image}}" target="_blank" rel="norefferer noopener">
                <img class="activator responsive-img" src="{{ product.image }}">
            </a>
        </div>
        <div class="card-content">
            <span class="card-title">{{ product.name }}</span>
            <p>{{ product.description }}</p>
            <hr>
           Prijs: <span style="font-weight: bolder;">{{ product.price }}</span>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s12 m6">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="product-{{ product.id }}-edit">
                        Edit
                    </button>
                    {% include 'dashboard/edit.twig' %}
                </div>
                <div class="col s12 m6">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="product-{{ product.id }}-delete">
                        Delete
                    </button>
                    {% include 'dashboard/delete.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
