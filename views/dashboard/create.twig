<button class="btn-large modal-trigger blue accent-4 waves-effect waves-light" data-target="product-create">
    Nieuw Product
</button>

<form id="product-create" class="modal product-create">
    <div class="modal-content">
        <h4>Creëer product</h4>
        <div class="row">
            <div class="input-field col s12">
                <input id="image" name="image" type="url" class="validate character-counter" data-length="2048" required>
                <label for="image">Foto URL*</label>
                <span class="helper-text" data-error="URL is vereist"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12 m6">
                <input id="name" name="name" type="text" class="validate character-counter" data-length="128" required>
                <label for="name">Naam*</label>
                <span class="helper-text" data-error="Naam is vereist"></span>
            </div>
            <div class="input-field col s12 m6">
                <input id="price" name="price" type="number" class="validate character-counter" data-length="256" required step="any">
                <label for="price">Prijs*</label>
                <span class="helper-text" data-error="Prijs is vereist"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <textarea id="description" name="description" class="materialize-textarea validate character-counter" data-length="2048" required></textarea>
                <label for="description">Beschrijving*</label>
                <span class="helper-text" data-error="Beschrijving is vereist"></span>
            </div>
        </div>
        <div class="row">
            <select id="category" name="category" required>
                <option value="" disabled selected>Kies categorie</option>
                <option value="kerastase">Kérastase</option>
                <option value="loreal">L'Oréal</option>
                <option value="recni_art">Tecni Art</option>
                <option value="marc_inbane">Marc Inbane</option>
                <option value="overig">Overig</option>
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn blue accent-4 waves-effect waves-light mr-2" type="submit">Creëer</button>
        <button class="btn blue accent-4 waves-effect waves-light modal-close" type="button">Annuleer</button>
    </div>
</form>
