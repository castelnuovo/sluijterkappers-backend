{% extends "partials/base.twig" %}
{% set title = "CubeQuence" %}
{% set page_script = "/assets/js/dashboard.js" %}

{% block content %}
<h3>Sluijterkappers Producten!</h3>
<div class="row">
    <ul class="collection with-header">
        <li class="collection-header">
            <h2>Producten <button class="btn-large waves-effect waves-light blue accent-4 right modal-trigger" data-target="product">Nieuw Product</button></h2>
            <form id="product" class="modal">
                <div class="modal-content">
                    <h4>Nieuw Product</h4>
                    <div class="row mb-0">
                        <div class="input-field col s12 mb-0">
                            <input id="image" name="image" type="url" class="validate" required> <!-- maximaal 2048 lang-->
                            <label for="image">Foto URL</label>
                            <span class="helper-text" data-error="Geldig URL is vereist"></span>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="input-field col s12 mb-0">
                            <input id="name" name="name" type="text" class="validate" required> <!-- maximaal 64 lang-->
                            <label for="name">Naam</label>
                            <span class="helper-text" data-error="Geldige naam is vereist"></span>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="input-field col s12 mb-0">
                            <input id="description" name="description" type="text" class="validate" required> <!-- maximaal 2048, textarea lang-->
                            <label for="description">Beschrijving</label>
                            <span class="helper-text" data-error="Geldige beschrijving is vereist"></span>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="input-field col s12 mb-0">
                            <input id="price" name="price" type="text" class="validate" required> <!-- maximaal 6 lang-->
                            <label for="price">Prijs</label>
                            <span class="helper-text" data-error="Geldige prijs is vereist"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn blue accent-4 waves-effect waves-light" type="submit">CreeÃ«r</button>
                </div>
            </form>
        </li>
        {% if not products %}
            <li class="collection-item">
                <div>
                    Geen producten gevonden!
                </div>
            </li>
        {% endif %}
        {% for product in products %}
            <li class="collection-item">
                <div>
                    <p>ID: {{ product.id }}</p>
                    <p>Naam: {{ product.name }}</p>
                    <p>Beschrijving: {{ product.description }}</p>
                    <p>Prijs: {{ product.pice }}</p>

                    <a class="secondary-content" href="#" onClick="deleteproduct('{{ product.id }}')">
                        <i class="material-icons blue-icon">delete</i>
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
